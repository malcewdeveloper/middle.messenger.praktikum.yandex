{
    "name": "yandex-messenger",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "start": "tsc && npm run build && node server/server.cjs",
        "preview": "vite preview",
        "eslint": "eslint .",
        "lint:style": "stylelint 'src/**/*.scss'",
        "lint": "npm run eslint && npm run lint:style && tsc",
        "test": "mocha -r ts-node/register --config .mocharc.json",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@types/chai": "^4.3.16",
        "@types/mocha": "^10.0.7",
        "@types/sinon": "^17.0.3",
        "@types/sinon-chai": "^3.2.12",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.10.0",
        "@typescript-eslint/parser": "^7.10.0",
        "chai": "^4.4.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^9.0.11",
        "jsdom": "^24.1.0",
        "lint-staged": "^15.2.7",
        "mocha": "^10.6.0",
        "prettier": "^3.2.5",
        "sass": "^1.75.0",
        "sinon": "^18.0.0",
        "sinon-chai": "^3.7.0",
        "stylelint": "^16.5.0",
        "stylelint-config-standard-scss": "^13.1.0",
        "stylelint-selector-bem-pattern": "^4.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5",
        "vite": "^5.2.0",
        "vite-plugin-handlebars": "^2.0.0"
    },
    "dependencies": {
        "express": "^4.19.2",
        "handlebars": "^4.7.8",
        "uuid": "^9.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "npm run test",
            "npm run lint"
        ]
    }
}
